@model Survey

<div>
    <h1>Dojo Survey</h1>
    <form action="create" method="post">
        <label asp-for="Name"></label>
        <input asp-for="Name">
        <span asp-validation-for="Name"></span>
        <label asp-for="Location">Dojo Location</label>
        <select name="Location" id="location">
            <option value="Chicago">Chicago</option>
            <option value="Virginia">Virginia</option>
            <option value="Moon">The Moon</option>
        </select>
        <span asp-validation-for="Location"></span>
        <label asp-for="Language">Favorite Language</label>
        <select name="Language" id="language">
            <option value="Csharp">c#</option>
            <option value="Javascript">JavaScript</option>
            <option value="Python">Python</option>
        </select>
        <span asp-validation-for="Language"></span>
        <label asp-for="Comment">Comments:</label>
        <textarea name="Comment" id="comment" cols="30" rows="10"></textarea>
        <span asp-validation-for="Comment"></span>
        <input type="submit" value="Submit">
    </form>
</div>
